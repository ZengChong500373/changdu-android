<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="@dimen/h_12"
    android:paddingLeft="@dimen/h_15"
    android:paddingRight="@dimen/h_12"
    >

    <ImageView
        android:id="@+id/img_cover"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/h_18"
        android:layout_toRightOf="@id/img_cover"
        android:textColor="@color/text_color"
        android:text="美女美女美女美女美女美女美女美女美女美女美女美女美女美女美女美女美女美女"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/tv_kinds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="@dimen/h_18"
        android:layout_marginTop="@dimen/h_8"
        android:layout_toRightOf="@id/img_cover"
        android:text="辰东"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_kinds"
        android:layout_marginLeft="@dimen/h_18"
        android:layout_marginTop="@dimen/h_4"
        android:layout_toRightOf="@id/img_cover"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="在破败中崛起，在寂静中权势滔天..."
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_15" />





</RelativeLayout>
