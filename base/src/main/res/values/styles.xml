<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background_color</item>
    </style>

    <style name="CommonDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 水平分割线 -->
    <style name="line">
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/line_color</item>
    </style>
    <style name="line2">
        <item name="android:layout_height">@dimen/v_1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/line_color2</item>
    </style>
    <!-- 垂直分割线 -->
    <style name="line_v">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/line_size</item>
        <item name="android:background">@color/line_color</item>
    </style>

    <!-- 水平分割条 -->
    <style name="space">
        <item name="android:layout_height">@dimen/space_size</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- toolbar左右icon -->
    <style name="toolbar_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/h_16</item>
        <item name="android:paddingRight">@dimen/h_16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/text_dark_color</item>
    </style>



</resources>
