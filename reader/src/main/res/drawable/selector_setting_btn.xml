<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">

        <shape>
            <corners android:radius="@dimen/semicircle" />

            <stroke android:color="@color/colorPrimary" android:width="@dimen/line_size"/>

        </shape>
    </item>

    <item android:state_pressed="true">

        <shape>
            <corners android:radius="@dimen/semicircle" />

            <stroke android:color="@color/colorPrimary" android:width="@dimen/line_size"/>

        </shape>
    </item>

    <item>

        <shape>
            <corners android:radius="@dimen/semicircle" />

            <stroke android:color="@color/reader_line" android:width="@dimen/line_size"/>

        </shape>
    </item>

</selector>