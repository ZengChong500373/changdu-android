<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sign_everyday"
    style="@style/benefit_bar">

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/h_25"
        android:layout_height="@dimen/h_25"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/h_20"
        />

    <TextView
        android:id="@+id/title"
        style="@style/benefit_bar_left"
        android:layout_marginLeft="@dimen/h_71"/>

    <com.linyi.viva.extra.ui.weidgt.CountdownTextView
        android:id="@+id/enter"
        android:layout_width="@dimen/h_80"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:textColor="@color/white"
        android:background="@drawable/selector_primary_semicircle"
        android:gravity="center"
        android:text="@string/start"
        android:textSize="@dimen/text_14"
        android:paddingTop="@dimen/v_5"
        android:paddingBottom="@dimen/v_5"
        android:layout_marginRight="@dimen/h_20"
        app:initText="@string/start"
        />

    <View
        style="@style/line"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/h_8"
        android:layout_marginRight="@dimen/h_8"
        />

</FrameLayout>
